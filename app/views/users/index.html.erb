<h1>All Users</h1>

<% @users.each do |user| %>
  <div class="user_link">
    <%= link_to user.full_name, user_path(user) %>
    <% if user.admin %>
      <%= button_to 'Revoke admin', user_admin_toggle_path(user), method: 'patch' %>
    <% else %>
      <%= button_to 'Set admin', user_admin_toggle_path(user), method: 'patch' %>
    <% end %>
      <%= button_to 'Delete user', user_path(user), method: 'delete' %>
    <br>
  </div>
<% end %>
