<%= simple_form_for ([@pet, @appointment]) do |f| %>
  <%= f.association :user, as: :hidden, value: current_user %>
  <%= f.association :pet, as: :hidden, value: @pet %>
  <%= f.input :start,
    minute_step: 30,
    start_year: Date.current.year,
    end_year: 6.months.from_now.year,
    start_hour: 9,
    end_hour: 16,
    label: "Appointment Time" %>
  <%= f.submit %>
<% end %>
