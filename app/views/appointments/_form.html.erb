<%= simple_form_for ([@pet, @appointment]) do |f| %>

  <%= f.input :timeslot,
    minute_step: 30,
    start_year: Date.current.year,
    end_year: 6.months.from_now.year,
    start_hour: 9,
    end_hour: 16,
    default: 1.day.from_now,
    label: "Appointment Time" %>
  <%= f.submit %>
<% end %>
